
{{#if haveProd }}

<table class="table table-dark table-striped" style="margin-top: 80px ;">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Imagen </th>
            <th scope="col">Nombre </th>
            <th scope="col">Precio </th>
        </tr>
    </thead>

    <tbody>
        {{#each products}}

        <tr class="table-active">
            <th scope="row">1</th>
            <td class="productIcon"> <img src="{{this.thumbnail}}" alt=""></td>
            <td> {{this.title}} </td>
            <td> {{this.price}} </td>
        </tr>
        {{/each }}
    </tbody> 
</table>

{{else}} 

<div class="alert alert-secondary" role="alert" style="margin-top: 80px;">
    No se encontraron Prodcutos
</div>

{{/if}} 